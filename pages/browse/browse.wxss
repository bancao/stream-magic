/* pages/browse/browse.wxss */
.video-list-head-img {
    width: 100%;
    height: 180rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.video-list {
    margin-top: 20rpx;
}

.video-list-info {  
    float: left;
    margin-left: 20rpx;
    margin-top: 20rpx;
    position: relative;
}

.video-list-photo {
    width: 220rpx;
    height: 220rpx;
}

.video-list-desc {
    display: block;
    background-color: #000;
    color: #fff;
    position: absolute;
    bottom: 3%;
    left: 0;
    width: 94%;
    text-align: center;
    font-size: 25rpx;
    padding: 10rpx;
    opacity: 0.7;
}

.video-list-selected-text {
    display: block;
    background-color: #000;
    color: #fff;
    position: absolute;
    bottom: 0%;
    top: 0%;
    left: 0;
    width: 94%;
    text-align: center;
    font-size: 100rpx;
    padding: 10rpx;
    opacity: 0.5;
}

.video-list-selected {
    margin-top: 20rpx;
}

.video-list-info-selected {
    float: left;
    margin-left: 10rpx;
    margin-top: 10rpx;
    position: relative;
}

.video-list-photo-selected {
    width: 100rpx;
    height: 100rpx;
}


.swiper-tab {
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    line-height: 88rpx;
    height: 100%;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}

.swiper-tab-item {
    width: 100%;
    height: 100%;
    color: #434343;
    /* border:1px solid #ccc; */
}

.active {
    color: rgb(89, 246, 160);
    border-bottom: rgb(89, 246, 128);
}

swiper {
    text-align: center;
}

.btn {
    display: inline-block;
    margin: 10px;
    padding: 0.4em 0.2em;
    background: rgb(186, 186, 230);
    border: 1px;
    border-radius: 1px;
    height: 15px;
    width: 80px;
    font-weight: 50;
    text-align: center;
    box-shadow: 0px 2px 4px #67c0f0, 0px 1px 2px #bf2fcb;
}

.btn text {
    background: -webkit-linear-gradient(left, #67c0f0, #bf2fcb);
    -webkit-text-fill-color: transparent;
}
